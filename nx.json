{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": ["@monodon/rust"],
  "defaultBase": "main",
  "release": {
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true
    },
    "changelog": {
      "projectChangelogs": true,
      "automaticFromRef": true
    },
    "groups": {
      "canfund": {
        "projectsRelationship": "fixed",
        "projects": ["libs/canfund"],
        "releaseTagPattern": "canfund@v{version}"
      },
      "libs": {
        "projectsRelationship": "fixed",
        "projects": ["libs/*", "!libs/orbit-essentials-macros-tests", "!libs/canfund"],
        "releaseTagPattern": "libs@v{version}"
      },
      "control-panel": {
        "projectsRelationship": "fixed",
        "projects": ["core/control-panel/*"],
        "releaseTagPattern": "control-panel@v{version}"
      },
      "station": {
        "projectsRelationship": "fixed",
        "projects": ["core/station/*", "core/upgrader/*"],
        "releaseTagPattern": "station@v{version}"
      },
      "wallet": {
        "projectsRelationship": "fixed",
        "projects": ["apps/wallet"],
        "releaseTagPattern": "wallet@v{version}"
      }
    }
  }
}
