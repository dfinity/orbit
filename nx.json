{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": ["@monodon/rust"],
  "defaultBase": "main",
  "release": {
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true
    },
    "releaseTagPattern": "{project}@v{version}",
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": {
        "createRelease": "github"
      }
    },
    "groups": {
      "libs": {
        "projects": [
          "libs/*",
          "!libs/orbit-essentials-macros-tests",
          "!libs/orbit-essentials-macros",
          "!libs/orbit-essentials"
        ],
        "changelog": {
          "commitMessageFormat": "chore(libs): release {project}@v{version}"
        }
      },
      "wallet": {
        "projects": ["apps/wallet"],
        "releaseTagPattern": "wallet@v{version}",
        "changelog": {
          "commitMessageFormat": "chore(wallet): release orbit-wallet@v{version}"
        }
      },
      "orbit": {
        "projectsRelationship": "fixed",
        "projects": [
          "core/control-panel/*",
          "core/station/*",
          "core/upgrader/*",
          "libs/orbit-essentials",
          "libs/orbit-essentials-macros"
        ],
        "releaseTagPattern": "orbit@v{version}",
        "changelog": {
          "commitMessageFormat": "chore(orbit): release orbit@v{version}"
        }
      }
    }
  }
}
