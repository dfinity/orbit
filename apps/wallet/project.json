{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "wallet-dapp",
  "projectType": "application",
  "targets": {
    "create-artifacts": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p ./artifacts/wallet-dapp",
          "pnpm --filter wallet-dapp run build:semver",
          "DAPP_VERSION=$(node -p \"require('./{projectRoot}/package.json').version\") && tar -czf ./artifacts/wallet-dapp/wallet-dapp-v$DAPP_VERSION.tar.gz -C {projectRoot}/dist/v$DAPP_VERSION . && rm -rf {projectRoot}/dist/v$DAPP_VERSION",
          "tar -czf ./artifacts/wallet-dapp/wallet-dapp-latest.tar.gz -C {projectRoot}/dist ."
        ],
        "parallel": false
      }
    }
  }
}
