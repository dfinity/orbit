{
  "name": "docs-portal",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/dfinity/orbit.git",
    "directory": "docs"
  },
  "engines": {
    "node": "^20",
    "pnpm": "^9",
    "npm": "please use pnpm",
    "yarn": "please use pnpm"
