    "playwright": "1.49.1",
    "rehype-mermaid": "3.0.0",
    "sharp": "0.33.5",
    "tailwindcss": "3.4.17"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "7.9.0",
    "eslint": "9.19.0",
